{
  "name": "mijn-ui",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:pkg": "turbo run build --filter={./packages/**/*}",
    "start": "turbo run start",
    "clean": "turbo run clean",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rimraf ./node_modules",
    "test": "turbo run test",
    "types:check": "turbo run types:check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:prettier": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "prettier": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.14.0",
    "@testing-library/react": "^16.1.0",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "5.1.0-rc-fb9a90fa48-20240614",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "8.3.5",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "eslint-config-custom": "workspace:*",
    "esbuild-plugin-preserve-directives": "^0.0.11",
    "vitest": "^2.1.5"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">= 18.17.0"
  }
}
